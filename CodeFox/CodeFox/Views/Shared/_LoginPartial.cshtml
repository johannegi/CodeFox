@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="HelloUser">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", null,  new { @class = "HoverEffect", title="Manage" })
        </li>
        <li>
            @Html.ActionLink("Projects", "Index", "Projects", routeValues: null, htmlAttributes: new { @class = "HoverEffect" })
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()" class="HoverEffect">Log off</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "HoverEffect" })            
        </li>
        <li>
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "HoverEffect" })
        </li>
    </ul>
}
