@model CodeFox.Models.ViewModels.EditorViewModel
@{
    ViewBag.Title = "Index";
}

<div>
    <h1>@Html.DisplayFor(model => model.Name)</h1>

    <div>
        <!-- Nav bar where SAVE EXPORT SHARE ADD FILE CLOSE AND DELETE PROJECT WILL BE-->
        @Html.ActionLink("Share with your foxes!", "Share", "Editor", new { @class = "EditorButtons" })
    </div>
    <div class="container">
        <!-- DIV AROUND THE FILE TREE VIEW AND EDITOR-->
        <div class="col-sm-2">
            <!--FILETREE-->
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Editor</h3>
            </div>
            <div class="panel-body">
                <pre id="Editor">@Html.DisplayFor(model => model.ReadMe.Location).ToString()</pre>
            </div>
        </div>
        <div class="text-center">---End of editor---</div>
    </div>

    <script src="~/scripts/AceEditor/ace.js" type="text/javascript" charset="utf-8"> </script>
    <script>
                var Editor = ace.edit("Editor");
                Editor.setTheme("ace/theme/twilight");
                Editor.session.setMode("ace/mode/Text");
    </script>
