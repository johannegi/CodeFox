@model CodeFox.Models.ViewModels.AddFilesViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "AddFileForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add File</h4>
        <hr />
        @Html.HiddenFor(model => model.ProjectID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="text-danger" id="ErrorLabel"></span>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Type, new SelectList(
                            Model.TypeList.Select(x => new { Value = x, Text = x }),
                            "value",
                            "text",
                            "cpp"), new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="btn btn-default CreateFile">Create</div>
            </div>
        </div>
    </div>
}