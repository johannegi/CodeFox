@model CodeFox.Models.ViewModels.ProjectsViewModel
@{
    ViewBag.Title = "Index";
}

<h1>Your Projects</h1>

<h2>Welcome @Html.DisplayFor(model => model.Name)</h2>



<h2>Projects</h2>
<div class="OwnProjects col-sm-12">
    <div class="col-sm-4 col-md-3 col-lg-2">
        <button class="Create card" onclick="location.href='@Url.Action("Create", "Projects")';return false;">
            <img class="card-img" src="~/Content/Images/plus.png" data-holder-rendered="true">
            <h4 class="card-title">@Html.ActionLink("Create new", "Create", "Projects")</h4>
        </button>
    </div>


    @if (Model.Projects.Count != 0)
    {
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Projects)
                {

                    <div class="col-sm-4 col-md-3 col-lg-2 Project">
                        <div class="thumbnail TestClass">
                            <img src="~/Content/Images/tester.jpg" data-holder-rendered="true" onclick="location.href='@Url.Action("Index", "Editor", new { id = item.ID })';return false;" />
                            <div class="caption ColumnSettings">
                                <h4>@Html.ActionLink(Html.DisplayFor(model => item.Name).ToString(), "Index", "Editor", new { id = item.ID }, null)</h4>
                                <p>Last updated three minutes ago</p>
                                <div class="dropup">
                                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-item">@Html.ActionLink("Delete", "Index", "Editor", new { id = item.ID }, null)</li>
                                        <li class="dropdown-item">@Html.ActionLink("Export", "Index", "Editor", new { id = item.ID }, null)</li>
                                        <li class="dropdown-item">@Html.ActionLink("Details", "Index", "Editor", new { id = item.ID }, null)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    }
</div>

          
@if (Model.SharedProjects.Count != 0)
{
    <h2>Shared Projects</h2>
    <div class="SharedProjects col-sm-12">
        @foreach (var item in Model.SharedProjects)
        {
            <div class="col-sm-2">
                <button class="Project card card-inverse" onclick="location.href='@Url.Action("Index", "Editor", new { id = item.ID })';return false;">
                    <img class="card-img" src="~/Content/Images/tester.jpg" data-holder-rendered="true">
                    <div class="card-img-overlay">
                        <h4 class="card-title">@Html.ActionLink(Html.DisplayFor(model => item.Name).ToString(), "Index", "Editor", new { id = item.ID}, null)</h4>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </button>
            </div>
        }
    </div>
}
