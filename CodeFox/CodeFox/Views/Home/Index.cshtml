@{
    ViewBag.Title = "Home Page";
}
    <div class="MainPageInfo MainPageCenter">
        <h1>CodeFox</h1>
        <p id="MainPageSlogan">The web page that makes cooperation a piece of cake</p>
        @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Projects")';return false;">Go to projects</button>
        }
        else
        {
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Register", "Account")';return false;">Create Account!</button>
        }

    </div>

    <div class="MainPageImage">
        <img src="~/Content/Images/MainPageImage.jpg" class="img-responsive" alt="CodeFox Image" />
    </div>


    <div class="MainPageWelcomeText MainPageCenter">
        <section id="services">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading">Why CodeFox</h2>
                        <h3 class="section-subheading text-muted">It works, and here´s why</h3>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x Circle"></i>
                            <i class="fa fa-code fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="service-heading">Share code</h4>
                        <p class="text-muted">Share code with your teammate in a easy and productive way!</p>
                    </div>
                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x Circle"></i>
                            <i class="fa fa-laptop  fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="service-ing">Real time solution</h4>
                        <p class="text-muted">You will instantly see all changes being made by your collaborator.</p>
                    </div>
                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x Circle"></i>
                            <i class="fa fa-cloud-download  fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="service-heading">Code access</h4>
                        <p class="text-muted">Access the code anywhere, any time!</p>
                    </div>
                </div>
            </div>
        </section>
    </div>

